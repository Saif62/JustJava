            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/symbol_2"/>
        <ImageButton
            android:id="@+id/minus_image_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageButton"
            android:background="#01b31f1f"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:layout_marginStart="16dp"
            android:onClick="minusEspresso"
            android:layout_below="@id/inr_text2"
            android:src="@drawable/quantity_decrease"/>
        <TextView
            android:id="@+id/quantity_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_value"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#ffe4ea"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/minus_image_button2"
            android:layout_below="@id/inr_text2"/>
        <ImageButton
            android:id="@+id/plus_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@string/imageButton"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:onClick="addEspresso"
            android:layout_below="@id/price_value_text2"
            android:focusableInTouchMode="true"
            android:layout_toEndOf="@id/quantity_text_view2"
            android:src="@drawable/quantity_increase"/>
        <ImageView
            android:id="@+id/cup_img2"
            android:contentDescription="@string/imageButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/price_value_text2"
            android:src="@drawable/espresso"
            android:background="@drawable/coffee_cup_bg"/>

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:sparkbutton_activeImage="@drawable/active_image"
            app:sparkbutton_inActiveImage="@drawable/inactive_image"
            app:sparkbutton_iconSize="30dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/cup_img2"
            app:sparkbutton_primaryColor="@color/primary_color"
            app:sparkbutton_secondaryColor="@color/secondary_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cup_img2"
            android:text="@string/espresso"
            android:textColor="#ffff"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/plus_button2"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
