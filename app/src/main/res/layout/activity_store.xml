    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/store_content_bg4"
        android:layout_below="@id/relative_layout3"
