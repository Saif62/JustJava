    </RelativeLayout>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#000"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="4dp"
        android:layout_above="@id/submit_Order"
        android:layout_toEndOf="@id/inr_symbol"
        android:text="@string/totalP"/>

    <TextView
        android:id="@+id/payable_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit_Order"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"
        android:text="@string/totalPrice"
        android:textColor="#000"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/inr_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/symbol"
        android:textSize="21sp"
        android:textColor="#000"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="20dp"
        android:layout_above="@id/submit_Order"
        android:layout_toEndOf="@id/payable_text"/>
    <Button
        android:id="@+id/submit_Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:textColor="#ffff"
        android:textSize="15sp"
        android:background="@drawable/order_button_bg"
        android:layout_centerInParent="true"
        android:text="@string/orderNow"/>

</RelativeLayout>
